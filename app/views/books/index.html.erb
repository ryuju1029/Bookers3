<div class="container">
  <div class="row">
  <%= render 'books/list', user: @user, book: @book %>

  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table>
      <tr>
        <td></td>
        <td>Titke</td>
        <td>Opinion</td>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user),method: :get do %>
          <%= attachment_image_tag book.user.profile_image_id,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %>
          <% end %>
          </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>

  </div>
  </div>
</div>