<div class="container">
  <div class="row">
    <%= render 'books/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user,:profile_image_id,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></br>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= @books.title %></td>
          <td><%= @books.body %></td>
            <% if current_user.id == @user.id %>
          <td>
             <%= link_to "Edit", edit_book_path(@user) ,class: 'btn btn-success'%>
          </td>
          <td>
             <%= link_to "Destroy", book_path(@books) ,method: :delete,class: 'btn btn-success'%>
          </td>
            <% end %>
         </tr>

      </table>
    </div>
  </div>
</div>