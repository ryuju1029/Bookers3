<div class="container">
  <div class="row">

   <%= render 'books/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
       <table>
         <tr>
           <td></td>
           <td>Title</td>
           <td>Opition</td>
         </tr>
         <% @books.each do |book| %>
         <tr>
           <td><%= attachment_image_tag book.user,:profile_image_id,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></td>
           <td>
               <%= link_to book_path(book) do %>
               <%= book.title %>
               <% end %>
           </td>
           <td><%= book.body %></td>
         <% end %>
       </table>
     </div>


   </div>
  </div>