<div class="containet">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
    <h1>User info</h1>
    <%= form_with model:@user,local:true do |f| %>
      <P>Name</P>
      <%= f.text_field :name %>
      <p>image</p>
      <%= f.attachment_field :profile_image %>
      <p>Introdution</p>
      <%= f.text_area :introdution %>
      <%= f.submit 'Update user'%>
    <% end %>
    </div>
  </div>
</div>