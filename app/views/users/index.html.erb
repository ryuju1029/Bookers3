<div class="container">
  <div class="row">

  <%= render 'books/list', user: @user, book: @book %>

  <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <table>
      <tr>
        <td>image</td>
        <td>name</td>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user.profile_image_id,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show",user_path(user) %></td>
      </tr>
     <% end %>
    </table>


  </div>

  </div>
</div>